{
    "totalWrapper_":{
        "wrapper1":{
            "label1_":{
                ":className":"UILabel",
                ":viewData":{
                    "text":"Red Label",
                    "backgroundColor":"#FF0000",
                    "textColor":"#FFFFFF",
                }
            },
            ":layout":"V:|-(8@250)-[label1_]-(8@250)-|;H:|-[label1_]-|;"
        },
        "wrapper2":{
            "label2_":{
                ":className":"UILabel",
                ":viewData":{
                    "text":"Green Label",
                    "backgroundColor":"#00FF00",
                    "textColor":"#000000",
                }
            },
            ":layout":"V:|-(8@250)-[label2_]-(8@250)-|;H:|-[label2_]-|;"
        },
        "wrapper3":{
            "label3_":{
                ":className":"UILabel",
                ":viewData":{
                    "text":"Blue Label",
                    "backgroundColor":"#0000FF",
                    "textColor":"#FFFFFF",
                }
            },
            ":layout":"V:|-(8@250)-[label3_]-(8@250)-|;H:|-[label3_]-|;"
        },
        ":layout":"H:|[wrapper1]|; V:|[wrapper1][wrapper2][wrapper3]| {left, right};",
        ":viewData":{
            "backgroundColor":"#CCCCCC",
        }
    },
    "buttonWrapper_":{
        "button1":{
            ":className":"UIButton",
            ":viewData":{
                "text":"Hide",
                "backgroundColor":"#FF0000",
                "textColor":"#FFFFFF",
                "tapEvent":"onButtonClicked:",
            }
        },
        "button2":{
            ":className":"UIButton",
            ":viewData":{
                "text":"Hide",
                "backgroundColor":"#00FF00",
                "textColor":"#000000",
                "tapEvent":"onButtonClicked:",
            }
        },
        "button3":{
            ":className":"UIButton",
            ":viewData":{
                "text":"Hide",
                "backgroundColor":"#0000FF",
                "textColor":"#FFFFFF",
                "tapEvent":"onButtonClicked:",
            }
        },
        ":layout":"
            V:|[button1]|;
            H:|-[button1]-[button2(button1)]-[button3(button1)]-| {top, bottom};
        "
    },
    ":layout":"
        H:|[totalWrapper_]|;
        V:|-[totalWrapper_]-20-[buttonWrapper_]-(>=0)-| {left,right};
    "
}
